<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/comanda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Valor a pagar"
        android:inputType="numberDecimal"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/pessoas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Quantas pessoas?"
        android:inputType="number"
        android:visibility="visible"/>

    <CheckBox
        android:id="@+id/porcento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deseja pagar 10%?"/>

    <Button
        android:onClick="calculo"
        android:id="@+id/cacular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultado da conta"/>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>